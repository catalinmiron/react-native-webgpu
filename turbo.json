{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build:android": {
      "outputs": [
        "apps/paper/android/app/build/**/*",
        "apps/paper/android/.gradle/**/*",
        "apps/paper/android/build/**/*"
      ],
      "inputs": [
        "apps/paper/android/build.gradle",
        "apps/paper/android/app/build.gradle",
        "apps/paper/android/gradle.properties",
        "!apps/paper/android/.gradle",
        "!apps/paper/android/build",
        "!apps/paper/android/app/build",
        "packages/webgpu/package.json",
        "packages/webgpu/android",
        "!packages/webgpu/android/build",
        "packages/webgpu/src",
        "packages/webgpu/cpp"
      ]
    },
    "build:ios": {
      "outputs": [
        "apps/paper/ios/Build/**/*",
        "apps/paper/ios/Pods/**/*",
        "apps/paper/ios/Podfile.lock"
      ],
      "inputs": [
        "apps/paper/ios/Podfile",
        "apps/paper/ios/Podfile.lock",
        "apps/paper/ios/Pods/**/*",
        "!apps/paper/ios/build",
        "!apps/paper/ios/Pods",
        "packages/webgpu/package.json",
        "packages/webgpu/*.podspec",
        "packages/webgpu/ios",
        "packages/webgpu/src",
        "packages/webgpu/cpp"
      ]
    },
    "lint": {},
    "tsc": {}
  }
}
